<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/distancesearch_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/distancesearch_ux_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/distacesearch_ux_loc"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_loaction_current" />

                <TextView
                    android:id="@+id/distance_distancesearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/distacesearch_ux_loc"
                    android:text="distance"
                    android:textColor="@color/textItemMenu" />

                <ImageView
                    android:id="@+id/distacesearch_wishlist"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_bucket_selected" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/distancesearch_ux_ll"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/img_distancesearch"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/loading_image" />

                <TextView
                    android:id="@+id/placename_distancesearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/img_distancesearch"
                    android:text="@string/placename"
                    android:textColor="@color/textItemMenu"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/location_distancesearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/placename_distancesearch"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/img_distancesearch"
                    android:text="@string/location"
                    android:textColor="@color/textItemMenu"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/district_distancesearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/location_distancesearch"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/img_distancesearch"
                    android:text="@string/district"
                    android:textColor="@color/textItemMenu"
                    android:textSize="15sp" />


                <ImageView
                    android:id="@+id/distacesearch_type"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/location_distancesearch"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/category_dams" />

            </RelativeLayout>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>