<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="10dp"
    android:background="@color/background">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="7dp"
        android:background="@color/colorPrimaryDark"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/card_background">

            <ImageView
                android:id="@+id/menu_feed_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/menu_feed_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/menu_feed_profile"
                android:text="@string/name"
                android:textColor="@color/dialog_text"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/menu_feed_avatar_lvl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu_feed_name"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/menu_feed_profile"
                android:text="@string/name"
                android:textColor="@color/dialog_text"
                android:textSize="10sp"/>



            <TextView
                android:id="@+id/menu_feed_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="@string/dateadded"
                android:textColor="@color/dialog_text"/>

            <TextView
                android:id="@+id/menu_feed_textbody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu_feed_profile"
                android:layout_margin="10dp"
                android:text="@string/text_placeholder"
                android:textColor="@color/dialog_text"/>



        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>