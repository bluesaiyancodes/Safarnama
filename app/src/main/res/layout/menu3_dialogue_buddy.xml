<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:layout_gravity="center"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1"
    android:id="@+id/menu3_buddy_img_header">

    <ImageView
        android:id="@+id/menu3_buddy_img"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="0.5"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/loading_image"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:id="@+id/menu3_buddy_avatar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="0.5"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/loading_image"
        android:layout_alignParentTop="true"/>


</LinearLayout>






        <TextView
            android:id="@+id/menu3_buddy_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/name"
            android:textColor="@color/textItemMenu"
            android:textStyle="bold"
            android:textSize="23sp"
            android:layout_below="@+id/menu3_buddy_img_header"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            />


        <TextView
            android:id="@+id/menu3_buddy_email"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="italic"
            android:text="@string/email"
            android:textColor="@color/textItemMenu"
            android:layout_marginTop="5dp"
            android:layout_below="@id/menu3_buddy_name"
            android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu3_buddy_email"
        android:weightSum="1"
        android:orientation="horizontal"
        android:id="@+id/menu3_buddy_date_added_holder">


        <TextView
            android:id="@+id/menu3_buddy_added_label"
            android:padding="5dp"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textSize="15sp"
            android:textStyle="italic"
            android:text="@string/dateadded"
            android:layout_marginRight="5dp"
            android:textColor="@color/textItemMenu"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/menu3_buddy_date_added"
            android:padding="5dp"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textSize="15sp"
            android:textStyle="italic"
            android:text="@string/dateadded"
            android:textColor="@color/textItemMenu"
            android:layout_marginTop="5dp" />

    </LinearLayout>



            <Button
                android:id="@+id/menu3_buddy_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/dialog_bg"
                android:layout_marginTop="20dp"
                android:layout_weight="0.5"
                android:text="@string/friend_unfriend"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/buddy_remove"
                android:layout_below="@+id/menu3_buddy_date_added_holder"
                android:layout_centerHorizontal="true"/>



</RelativeLayout>