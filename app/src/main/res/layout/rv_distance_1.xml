<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="230dp"
        android:layout_height="110dp"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="3dp"
        app:cardElevation="2dp"
        android:layout_centerInParent="true">


        <LinearLayout
            android:id="@+id/distance_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/distance_menu_image"
                android:src="@drawable/loading_image"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Menu item1"
                android:id="@+id/distance_menu_name"
                android:layout_toEndOf="@+id/distance_menu_image"
                android:gravity="start"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/textItemMenu"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="15sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu item2"
                android:id="@+id/distance_menu_type"
                android:layout_toEndOf="@+id/distance_menu_image"
                android:layout_below="@+id/distance_menu_name"
                android:gravity="start"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="15sp"
                />


        </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>