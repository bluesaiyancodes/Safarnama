<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/explore_item_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_explore"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/loading_image" />

            <TextView
                android:id="@+id/placename_explore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/img_explore"
                android:text="@string/placename"
                android:textColor="@color/textItemMenu"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/location_explore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/placename_explore"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/img_explore"
                android:text="@string/location"
                android:textColor="@color/textItemMenu"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/state_explore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/location_explore"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/img_explore"
                android:text="@string/district"
                android:textColor="@color/textItemMenu"
                android:textSize="15sp"
                android:textStyle="italic" />


            <ImageView
                android:id="@+id/explore_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/add_icon" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>