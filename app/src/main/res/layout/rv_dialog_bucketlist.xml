<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/dialog_bg"
        android:layout_marginTop="120dp">

        <TextView
            android:id="@+id/dialog_bucketlist_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/placename"
            android:textColor="@color/textItemMenu"
            android:textStyle="bold"
            android:textSize="23sp"
            android:layout_marginTop="75dp"
            />

        <TextView
            android:id="@+id/dialog_bucketlist_type"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="italic"
            android:text="@string/type"
            android:textColor="@color/textItemMenu"
            android:layout_marginTop="5dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <TextView
                android:padding="5dp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="italic"
                android:text="@string/dateadded"
                android:textColor="@color/textItemMenu"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/dialog_bucketlist_date"
                android:padding="5dp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="italic"
                android:text="date"
                android:textColor="@color/textItemMenu"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/dialog_bucketlist_description"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="italic"
            android:text="@string/description"
            android:textColor="@color/textItemMenu"
            android:layout_marginTop="5dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <Button
                android:id="@+id/dialog_bucketlist_removewishlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/dialog_bg"
                android:layout_marginTop="20dp"
                android:layout_weight="0.5"
                android:drawableTop="@drawable/bucketlistremove"/>

            <Button
                android:id="@+id/dialog_bucketlist_addtocompletelist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/dialog_bg"
                android:layout_marginTop="20dp"
                android:layout_weight="0.5"
                android:drawableTop="@drawable/accomplished_add"/>

        </LinearLayout>




    </LinearLayout>

    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/dialog_bucketlist_img"
            android:layout_width="240dp"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/loading_image" />

        <Button
            android:id="@+id/dialog_bucketlist_btn_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/dialog_bg_colored"
            android:text="@string/details"
            android:textColor="@color/white"/>

    </RelativeLayout>

</RelativeLayout>