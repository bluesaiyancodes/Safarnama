<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:background="@drawable/dialog_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_main_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:text="@string/placename"
            android:textAlignment="center"
            android:textColor="@color/textItemMenu"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_main_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="@string/type"
            android:textAlignment="center"
            android:textColor="@color/textItemMenu"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/dialog_main_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="@string/description"
            android:textAlignment="center"
            android:textColor="@color/textItemMenu"
            android:textSize="15sp"
            android:textStyle="italic" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">


            <ImageButton
                android:id="@+id/dialog_main_addtowishlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="0.5"
                android:background="@color/dialog_bg"
                android:src="@drawable/bucketlistadd" />

            <ImageButton
                android:id="@+id/dialog_main_addtocompletelist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="0.5"
                android:background="@color/dialog_bg"
                android:src="@drawable/accomplished_add" />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/dialog_main_img"
            android:layout_width="240dp"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/loading_image" />

        <Button
            android:id="@+id/dialog_main_btn_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/dialog_bg_colored"
            android:text="@string/details"
            android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>